= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :description
    = f.text_area :description

  = f.hidden_field :slack_name, value: @team.slack_name
  - if @team.admin.nil?
    = f.hidden_field :admin, value: true
  .actions
    = f.submit 'Save'
