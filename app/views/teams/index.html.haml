%h1 Listing teams

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Owner
      %th Eaten doughnuts
      %th Awaiting doughnuts
      %th Slack url
      %th Members count
      %th Bloopers count
      %th
      %th
      %th

  %tbody
    - @teams.each do |team|
      %tr
        %td= team.name
        %td= team.description
        %td= team.owner_id
        %td= team.eaten_doughnuts
        %td= team.awaiting_doughnuts
        %td= team.slack_url
        %td= team.members_count
        %td= team.bloopers_count
        %td= link_to 'Show', team_path(team.slack_name)
        %td= link_to 'Edit', edit_team_path(team)
        %td= link_to 'Destroy', team_path(team.slack_name), method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Team', new_team_path
